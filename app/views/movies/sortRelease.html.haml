%h1 All Movies
= form_tag movies_path, :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]"
  = submit_tag 'Refresh'
%table#movies
  %thead
    %tr
      %th=link_to "Movie Title", sortTitle_path
      -#%th sortable "Movie Title"
      %th Rating
      %th.hilite=link_to "Release Date", sortRelease_path
      %th More Info
  %tbody
    -#=render :partial=>'movie', :collection=>@movies
    =render :partial=>'movie', :collection=>@movies.order("release_date ASC")
= link_to 'Add new movie', new_movie_path
-#= link_to 'Title', index_title_path
-#= link_to 'Release Date', sort_release_path
